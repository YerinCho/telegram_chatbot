{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,                               /* Enable error reporting for expressions and declarations with an implied 'any' type. */
  },
}
